    <td style="vertical-align: middle;" colspan="3">
        ab {{from}} Uhr
    </td>
    {{else}}
    <td style="vertical-align: middle;" colspan="3">&#160;</td>
    {{/if}}
    {{/if}}
    <td style="vertical-align: middle; ">{{desc}}</td>
