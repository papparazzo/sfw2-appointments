<div>
    <div style="overflow-x: auto;">
        <h4 class="mb-3 text-decoration-underline">Termine</h4>
        <p>
            {{caption}}
        </p>
        <div id="{{sfw2_routing.path_simplified}}" class="d-none">
            <form class="needs-validation" novalidate="novalidate">
                <div class="mb-3">
                    <input
                        type="date"
                        class="form-control "
                        placeholder="Startdatum"
                        name="sdstartdate"
                        required="required"
                        title="Gib hier bitte das Startdatum im Format TT.MM.JJJJ ein."
                        maxlength="10"
                    />
                    <div class="form-text invalid-feedback">fehler</div>
                </div>
                <div class="mb-3">
                    <input
                        type="time"
                        name="sdstarttime"
                        placeholder="Startuhrzeit"
                        title="Gib hier bitte die Startzeit im Format hh:mm ein."
                        maxlength="5"
                        class="form-control "
                        required="required"
                    />
                    <div class="form-text invalid-feedback">fehler</div>
                </div>
                <div class="mb-3">
                    <input
                        class="form-control "
                        type="date"
                        name="sdenddate"
                        placeholder="Enddatum"
                        title="Gib hier bitte das Enddatum im Vormat TT.MM.JJJJ ein."
                        maxlength="10"
                    />
                    <div class="invalid-feedback">fehler</div>
                </div>
                <div class="mb-3">
                    <input
                        class="form-control "
                        type="time"
                        name="sdendtime"
                        placeholder="Enduhrzeit"
                        title="Gib hier bitte die Endzeit im Vormat hh:mm ein."
                        maxlength="5"
                    />
                    <div class="invalid-feedback">fehler</div>
                </div>
                <div class="mb-3">
                    <input
                        class="form-control "
                        type="text"
                        name="sddesc"
                        placeholder="Beschreibung"
                        title="Gib hier bitte eine Beschreibung ein."
                        maxlength="250"
                    />
                    <div class="invalid-feedback">fehler</div>
                </div>
                <div class="mb-3">
                    <input
                        class="form-control "
                        type="text"
                        name="sdlocation"
                        placeholder="Ort"
                        title="Gib hier bitte einen Ort an."
                        maxlength="250"
                    />
                    <div class="invalid-feedback">fehler</div>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input
                            class="form-check-input"
                            name="sdchangeable"
                            type="checkbox"
                            id="sdchangeable"
                            value="1"
                            title="Klick hier bitte, wenn der Termin noch nicht fest ist und sich ggf. ändert!"
                        />
                        <label class="form-check-label" for="sdchangeable">
                            Flextermin (Termin kann sich noch ändern)
                        </label>
                        <div class="invalid-feedback">Fehler</div>
                    </div>
                </div>
            </form>
        </div>
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Datum</th>
                    <th>Uhrzeit</th>
                    <th>Was</th>
                    <th>Wo</th>
                    <th>
                        <button
                            type="button"
                            class="btn-sm btn btn-light"
                            data-bs-toggle="modal"
                            data-bs-target="#sfw2-dialog-modal"
                            data-sfw2-form-id="{{sfw2_routing.path_simplified}}"
                            data-sfw2-url="{{sfw2_routing.path}}"
                        ><i class="bi bi-plus-square"></i></button>
                    </th>
                </tr>
            </thead>
            <tbody class="text-nowrap">
                {{#each entries}}
                <tr id="{{formid}}_recordset_{{id}}">

                </tr>
                {{/each}}

